<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Task_Management_Application.MainPage">


    <StackLayout BackgroundColor="BlanchedAlmond" >
        <Label Text="Task Manager"  FontSize="Large" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,15,0,0"/>
        <Label Text=" Optimize your Day...! " FontSize="Small" FontAttributes="Italic" HorizontalOptions="Center" TextColor="Indigo" />


        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" >

            <Button Text="Create Task" MinimumWidthRequest="150" CornerRadius="15" Clicked="onCreateTaskClicked" HorizontalOptions="Center" Margin="0,0,0,25" Background="DarkGray" TextColor="Black" FontAttributes="Bold"/>
            <Button Text="All Tasks" MinimumWidthRequest="150" CornerRadius="15" Clicked="onViewTaskClicked" HorizontalOptions="Center" Background="GreenYellow" TextColor="Black" FontAttributes="Bold"  Margin="0,0,0,25"/>
            <Button Text="View Task Status" MinimumWidthRequest="150" CornerRadius="15" HorizontalOptions="Center" Background="DarkGray" TextColor="Black" FontAttributes="Bold"/>

        </StackLayout>
    </StackLayout>
</ContentPage>