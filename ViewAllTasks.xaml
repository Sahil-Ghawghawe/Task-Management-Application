<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Task_Management_Application.ViewAllTasks"
             Title="ViewAllTasks">
    <StackLayout Background="WhiteSmoke">

        <Label Text="View All Task" FontSize="Large" HorizontalOptions="Center" FontAttributes="Bold"/>

        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="Center">

            <Button Text="View All Tasks" Clicked="onViewTaskClicked" FontAttributes="Bold" BackgroundColor="DarkSeaGreen"  Margin="0,25,0,0" />

        </StackLayout>
    </StackLayout>
</ContentPage>